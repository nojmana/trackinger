@page
@model trackinger.Pages.Bugs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bug</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bug.CreationDate" class="control-label"></label>
                <input asp-for="Bug.CreationDate" class="form-control" />
                <span asp-validation-for="Bug.CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.Description" class="control-label"></label>
                <input asp-for="Bug.Description" class="form-control" />
                <span asp-validation-for="Bug.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.Priority" class="control-label"></label>
                <select asp-for="Bug.Priority" class="form-control"></select>
                <span asp-validation-for="Bug.Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.CreatorId" class="control-label"></label>
                <select asp-for="Bug.CreatorId" class ="form-control" asp-items="ViewBag.CreatorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
