@page
@model trackinger.Pages.Bugs.IndexModel

@{
    ViewData["Title"] = "Bugs";
}

<h1>Bugs</h1>

<p>
    <a asp-page="Create">Create new</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bug[0].NotificationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bug[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bug[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bug[0].Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bug[0].Creator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bug[0].Assignee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Bug) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creator.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assignee.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
