@page
@model trackinger.Pages.Bugs.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Bug</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bug.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bug.CreationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bug.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bug.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bug.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bug.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bug.Priority)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bug.Priority)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bug.Creator)
        </dt>
        <dd class="col-sm-10">
            <a asp-page="../Users/Details" asp-route-id="@Model.Bug.CreatorId">
                @Html.DisplayFor(model => model.Bug.Creator.Login)
            </a>
        </dd>
    </dl>
</div>
<hr/>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Bug.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
<hr/>
<div>
    <h4>Notifications list</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                     @Html.DisplayNameFor(modelNotification => Model.Bug.Notification[0].NotificationDate)
                </th>
                <th>
                        @Html.DisplayNameFor(modelNotification => Model.Bug.Notification[0].Description)
                </th>
                <th>
                        @Html.DisplayNameFor(modelNotification => Model.Bug.Notification[0].Status)
                </th>
                <th>
                        @Html.DisplayNameFor(modelNotification => Model.Bug.Notification[0].Assignee)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var notification in Model.Bug.Notification)
        {
            <tr> 
                <td> 
                    @Html.DisplayFor(modelItem => notification.NotificationDate) 
                </td> 
                <td> 
                    @Html.DisplayFor(modelItem => notification.Description) 
                </td> 
                <td> 
                    @Html.DisplayFor(modelItem => notification.Status) 
                </td> 
                <td> 
                    <a asp-page="../Users/Details" asp-route-id="@notification.AssigneeId"> 
                        @Html.DisplayFor(modelItem => notification.Assignee.Login) 
                    </a>
                </td>
            </tr>
        }
        </tbody>
     </table>
</div>
