@page
@model trackinger.Pages.Notification.IndexModel

@{
    ViewData["Title"] = "Notifications";
}

<h1>Notifications</h1>

<p>
    <a asp-page="Create">Create new</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.NotificationDateSort">
                @Html.DisplayNameFor(model => model.Notification[0].NotificationDate)
            </a>
        </th>
        <th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.BugSort">
                @Html.DisplayNameFor(model => model.Notification[0].Bug)
            </a>
        </th>
        <th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.DescriptionSort">
                @Html.DisplayNameFor(model => model.Notification[0].Description)
            </a>
        </th>
        <th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.StatusSort">
                @Html.DisplayNameFor(model => model.Notification[0].Status)
            </a>
        </th>
        <th>                
            <a asp-page="./Index" asp-route-sortOrder="@Model.AssigneeSort">
                @Html.DisplayNameFor(model => model.Notification[0].Assignee)
            </a>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Notification) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationDate)
            </td>
            <td>
                <a asp-page="../Bugs/Details" asp-route-id="@item.BugId">
                    @Html.DisplayFor(modelItem => item.Bug.Title)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="../Users/Details" asp-route-id="@item.AssigneeId">
                    @Html.DisplayFor(modelItem => item.Assignee.Login)
                </a>

            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>